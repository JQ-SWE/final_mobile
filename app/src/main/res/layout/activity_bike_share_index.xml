<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BikeShareIndexActivity">

    <View
        android:id="@+id/headline_bikeshare"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/grey" />

    <TextView
        android:id="@+id/tv_bikeshare_rent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        android:padding="25dp"
        android:text="Bike Share"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/BikeShare_index_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/arrow"
        android:background="@color/grey"/>

    <Button
        android:id="@+id/index_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service"
        android:textSize="20dp"
        android:layout_marginTop="600dp"
        android:layout_marginStart="15dp" />

    <Button
        android:id="@+id/index_rent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rent"
        android:textSize="20dp"
        android:layout_marginTop="600dp"
        android:layout_marginStart="155dp" />

    <Button
        android:id="@+id/index_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account"
        android:textSize="20dp"
        android:layout_marginTop="600dp"
        android:layout_marginStart="260dp" />

</RelativeLayout>