<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BikeShareAccountActivity">

    <View
        android:id="@+id/headline_bikeshare"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/grey"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/tv_bikeshare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        android:padding="25dp"
        android:text="Bike Share"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/BikeShare_account_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        app:srcCompat="@drawable/abc_vector_test" />

    <ImageView
        android:id="@+id/BikeShare_imageView"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_below="@+id/headline_bikeshare"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/user"
        android:layout_centerHorizontal="true"
        android:scaleY="1.3"
        android:scaleX="1.3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dear"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="80dp"
        android:layout_below="@+id/BikeShare_imageView"
        android:layout_marginStart="150dp" />

    <TextView
        android:id="@+id/bikeaccount_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jin qi"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="80dp"
        android:layout_below="@+id/BikeShare_imageView"
        android:layout_marginStart="210dp" />

    <View
        android:id="@+id/numberOfRentals"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/bikeaccount_phone"
        android:background="@color/grey" />

    <TextView
        android:id="@+id/tv_numberOfRentals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberOfRentals"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="290dp"
        android:layout_marginTop="-80dp"
        android:text="0"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberOfRentals"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="290dp"
        android:layout_marginTop="-50dp"
        android:text="Number of rentals"
        android:textSize="15dp" />

    <View
        android:id="@+id/totalRentalHours"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="145dp"
        android:layout_below="@+id/bikeaccount_phone"
        android:background="@color/grey" />

    <TextView
        android:id="@+id/tv_totalRentalHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberOfRentals"
        android:gravity="center"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:layout_marginTop="-80dp"
        android:text="0"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberOfRentals"
        android:gravity="center"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:layout_marginTop="-50dp"
        android:text="Total rental hours(h)"
        android:textSize="15dp" />


    <View
        android:id="@+id/totalKM"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="280dp"
        android:layout_below="@+id/bikeaccount_phone"
        android:background="@color/grey" />

    <TextView
        android:id="@+id/tv_totalbalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberOfRentals"
        android:gravity="center"
        android:layout_marginLeft="290dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="-80dp"
        android:text="0"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberOfRentals"
        android:gravity="center"
        android:layout_marginLeft="290dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="-50dp"
        android:text="Total     balance($)"
        android:textSize="15dp" />

    <Button
        android:id="@+id/Account_topup"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="TOP UP"
        android:textSize="20dp"
        android:layout_below="@+id/bikeaccount_phone"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="150dp"/>

    <TextView
    android:id="@+id/rentno"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="invisible"/>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="?android:attr/listDivider"
        android:layout_marginTop="390dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>


</RelativeLayout>