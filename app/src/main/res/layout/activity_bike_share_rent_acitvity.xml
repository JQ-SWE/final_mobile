<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BikeShareRentAcitvity">

    <View
        android:id="@+id/headline_bikeshare"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#8BC34A" />

    <TextView
        android:id="@+id/tv_bikeshare_rent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Rent"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-black"
        android:textSize="34sp" />

    <View
        android:id="@+id/divider1"
        android:layout_width="140dp"
        android:layout_height="10dp"
        android:layout_marginTop="325dp"
        android:layout_marginStart="30dp"
        android:background="#8BC34A"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_marginTop="313dp" />

    <View
        android:id="@+id/divider2"
        android:layout_width="140dp"
        android:layout_height="10dp"
        android:layout_marginTop="325dp"
        android:layout_marginStart="240dp"
        android:layout_marginEnd="30dp"
        android:background="#8BC34A"/>

    <TextView
        android:id="@+id/bikeQRcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan bike rental QR code"
        android:textSize="20dp"
        android:layout_marginTop="250dp"
        android:layout_marginStart="40dp" />

    <ImageButton
        android:id="@+id/btn_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/scan"
        android:layout_marginTop="195dp"
        android:layout_marginStart="250dp"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:background="#FFFFFF"/>

    <EditText
        android:id="@+id/et_bikeidentifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider1"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:hint="Bike identifier"
        android:textSize="20dp" />

    <Button
        android:id="@+id/bikeconfirm"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="CONFIRM"
        android:layout_below="@+id/divider1"
        android:layout_marginStart="230dp"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:backgroundTint="#8BC34A" />

    <TextView
        android:id="@+id/rentbalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

</RelativeLayout>